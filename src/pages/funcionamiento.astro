---
import Layout from '../layouts/Layout.astro';

const operationalSteps = [
  { title: "Sesiones virtuales semanales", description: "Capacitación y seguimiento de proyectos" },
  { title: "Reuniones presenciales mensuales", description: "Integración y presentación de avances" },
  { title: "Equipos multidisciplinarios", description: "Combinación de habilidades de programación y diseño" },
  { title: "Mentoría continua", description: "Por parte de docentes y profesionales del sector" },
];

const learningSteps = [
  { title: "Fundamentos", description: "Introducción a conceptos básicos de programación y diseño gráfico" },
  { title: "Especialización", description: "Profundización en lenguajes de programación específicos y herramientas de diseño" },
  { title: "Proyectos prácticos", description: "Aplicación de conocimientos en proyectos reales" },
  { title: "Mentoría y retroalimentación", description: "Sesiones de revisión y mejora continua" },
];

const projectCycle = [
  "Identificación de problemas",
  "Ideación y diseño",
  "Desarrollo",
  "Pruebas",
  "Implementación",
  "Evaluación"
];

const tools = [
  "HTML/CSS",
  "JavaScript",
  "Python",
  "Node.js",
  "Git",
  "Figma",
  "Adobe Creative Suite",
  "Krita"
];
---

<Layout title="PRODIG01 - Funcionamiento">
  <main class="bg-gray-900 text-white">
    <header class="py-8 bg-gray-800">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl sm:text-5xl font-bold mb-4 mt-10 text-center" id="pageTitle">Funcionamiento</h1>
        <nav aria-label="Breadcrumb">
          <ol class="flex justify-center space-x-2 text-sm">
            <li><a href="/" class="text-gray-400 hover:text-white">Inicio</a></li>
            <li><span class="text-gray-600">/</span></li>
            <li><span class="text-white" aria-current="page">Funcionamiento</span></li>
          </ol>
        </nav>
      </div>
    </header>

    <section class="py-16 sm:py-24">
      <div class="container  mx-auto px-4">
        <div class="max-w-4xl mx-auto space-y-12">
          <!-- Operational Structure -->
          <div class="bg-gray-800 p-6 rounded-lg">
            <h2 class="text-2xl font-semibold mb-4 text-yellow-500">Estructura Operativa</h2>
            <p class="text-gray-300 mb-4">
              PRODIG01 opera como un semillero colaborativo, uniendo estudiantes de diferentes instituciones educativas. Nuestro enfoque se basa en:
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4" id="operationalSteps">
              {operationalSteps.map((step, index) => (
                <div class="bg-gray-700 p-4 rounded-lg operational-step" data-index={index}>
                  <h3 class="font-semibold text-lg mb-2">{step.title}</h3>
                  <p class="text-sm text-gray-300">{step.description}</p>
                </div>
              ))}
            </div>
          </div>

          <!-- Learning Process -->
          <div class="bg-gray-800 p-6 rounded-lg">
            <h2 class="text-2xl font-semibold mb-4 text-yellow-500">Proceso de Aprendizaje</h2>
            <div class="space-y-4" id="learningSteps">
              {learningSteps.map((step, index) => (
                <div class="flex items-center learning-step" data-index={index}>
                  <div class="flex-shrink-0 w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center mr-4">
                    <span class="font-bold text-gray-900">{index + 1}</span>
                  </div>
                  <div>
                    <h3 class="font-semibold text-lg">{step.title}</h3>
                    <p class="text-sm text-gray-300">{step.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Project Development Cycle -->
          <div class="bg-gray-800 p-6 rounded-lg">
            <h2 class="text-2xl font-semibold mb-4 text-yellow-500">Ciclo de Desarrollo de Proyectos</h2>
            <div class="relative" id="projectCycle">
              {projectCycle.map((phase, index) => (
                <div class="mb-8 flex items-center project-phase" data-index={index}>
                  <div class="flex items-center justify-center w-8 h-8 bg-yellow-500 rounded-full mr-4">
                    <span class="text-gray-900 font-bold">{index + 1}</span>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-purple-400">{phase}</h3>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Tools and Technologies -->
          <div class="bg-gray-800 p-6 rounded-lg">
            <h2 class="text-2xl font-semibold mb-4 text-yellow-500">Herramientas y Tecnologías</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4" id="toolsGrid">
              {tools.map((tool, index) => (
                <div class="bg-gray-700 p-3 rounded-lg text-center tool" data-index={index}>
                  <span class="text-sm font-medium">{tool}</span>
                </div>
              ))}
            </div>
          </div>

          <div class="text-center">
            <a href="/" class="inline-block px-6 py-3 bg-yellow-500 text-gray-900 rounded-lg font-semibold hover:bg-yellow-400 transition duration-300 ease-in-out transform hover:scale-105">
              Volver a Inicio
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  function animateElements(selector, delay = 100, initialTransform = 'translateY(20px)') {
    const elements = document.querySelectorAll(selector);
    elements.forEach((el, index) => {
      el.style.opacity = '0';
      el.style.transform = initialTransform;
      setTimeout(() => {
        el.style.transition = 'opacity 0.5s, transform 0.5s';
        el.style.opacity = '1';
        el.style.transform = 'translateY(0)';
      }, index * delay);
    });
  }

  // Animate sections
  animateElements('.operational-step', 100, 'translateX(-20px)');
  animateElements('.learning-step', 100, 'translateY(20px)');
  animateElements('.project-phase', 100, 'translateX(-20px)');
  animateElements('.tool', 50, 'scale(0.9)');

  // Add hover effect to tools
  const tools = document.querySelectorAll('.tool');
  tools.forEach(tool => {
    tool.addEventListener('mouseenter', () => {
      tool.style.transform = 'scale(1.05)';
      tool.style.transition = 'transform 0.3s ease-in-out';
    });
    tool.addEventListener('mouseleave', () => {
      tool.style.transform = 'scale(1)';
    });
  });
</script>